package com.app.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import com.app.util.Dbutil;

public class UserDao {
	public static boolean adminLogin(String username,String password) throws SQLException {
		Connection  connection = Dbutil.getConnection();
		String sql = "SELECT * FROM users  where username = ? AND password=? AND role='admin'";
		PreparedStatement selectStatement = connection.prepareStatement(sql);
		selectStatement.setString(1, username);
		selectStatement.setString(2, password);

		ResultSet rs = selectStatement.executeQuery();
		
		if(rs.next() && rs.getString(2).equals(username)  && rs.getString(3).equals(password) && rs.getString(4).equals("admin")) {//uname,pass,role
			System.out.println("Success!");
			return true;
		}
		else {
			System.out.println("Failed!");
			System.out.println(rs.getString(2) +rs.getString(3)+ rs.getString(4));
		}
		return false;
	}
	
	public static boolean studentLogin(String username,String password) {
		
		return false;
	}
}