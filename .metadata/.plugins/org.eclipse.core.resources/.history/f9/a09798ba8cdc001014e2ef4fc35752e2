package com.app.dao;

import java.io.File;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.List;

import com.app.model.Question;
import com.app.util.Dbutil;
import com.app.util.QuestionFileParser;
import com.mysql.cj.x.protobuf.MysqlxCrud.Insert;

public class QuestionsDao {
	public QuestionsDao(){
		
	}
	
	public static void loadQuizzes(String quizName,String path) throws SQLException {
		Connection connection = Dbutil.getConnection();
		
		String sql = "insert into quizzes(title, creator) values(?,?)";
		PreparedStatement inserQuizTitle = connection.prepareStatement(sql);
		inserQuizTitle.setString(1, quizName);
		inserQuizTitle.setInt(2, 1);
		inserQuizTitle.executeQuery();
		
		
		try {
			List<Question> questionsList = QuestionFileParser.parse(new File (path));
			String sqlQuizName = "select id from quizzes where title = ?";
			PreparedStatement selectQuizTitle = connection.prepareStatement(sql);
			selectQuizTitle.setString(1, quizName);

			
		}catch(Exception e) {
			e.printStackTrace();
		}
		
	}
	
}
