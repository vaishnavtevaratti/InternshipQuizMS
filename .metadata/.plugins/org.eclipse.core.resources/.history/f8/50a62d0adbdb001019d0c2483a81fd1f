package com.app.menu;

import java.util.Scanner;

public class MainMenu {
	
	public static void menuOption(Scanner sc) {
	int ch=0;
	
	do {
		System.out.println("********MENU********");
		System.out.println("1.Admin login\n2.Student Register\n3.Student Login\n 4.Exit");
		
		System.out.println("Select:");
		ch = sc.nextInt();
		
		switch (ch) {
		case 1: System.out.println("Insert information:");
		
		break;
		
		case 2: System.out.println("Insert information:");
		
		break;
		case 3: System.out.println("Insert information:");
		
		break;
		
		case 4: System.out.println("Log out");
		}
	}while (ch!=4);
	
}
}